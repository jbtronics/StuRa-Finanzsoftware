{% extends "main_card.html.twig" %}

{% block card_content %}
    <p class="text-muted">
        {% block funding_hints %}
            {% trans %}funding_application.internal.new.hint{% endtrans %}<br>
        {% endblock %}
        {% trans with {'%fsb_email%': fsb_email, '%support_email%': support_email, '%hhv_email%': hhv_email} %}payment_order.new.contact_info{% endtrans %}
    </p>

    {{ form_start(form) }}
    <div class="row">

        <div class="col-sm-6">
            <fieldset>
                <legend>{% trans %}payment_order.new.applicant{% endtrans %}</legend>

                {{ form_row(form.applicant_name) }}
                {{ form_row(form.applicant_email) }}
                {% block additional_applicant %}
                    {{ form_row(form.applicant_department) }}
                {% endblock %}
            </fieldset>
        </div>

        <div  class="col-sm-6">
            <fieldset>
                <legend>{% trans %}payment_order.new.application_info{% endtrans %}</legend>

                {{ form_row(form.requested_amount) }}
                {{ form_row(form.funding_intention) }}
                {{ form_row(form.explanation_file) }}
                {{ form_row(form.finance_plan_file) }}

            </fieldset>
        </div>
    </div>


    {{ form_errors(form) }}


    {{ form_end(form) }}
{% endblock %}